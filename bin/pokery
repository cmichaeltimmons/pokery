#!/usr/bin/env node
var argv = require('yargs').argv;

var Simulator = require('pokery').default;


process.title = 'pokery';


switch (argv._[0]) {
  case 'simulate':
    var board = (argv.b || argv.board).match(new RegExp('.{1,'+ 2 + '}', 'g'));
    var simulator = new Simulator(argv.h || argv.hand, board);
    simulator.run();
    console.log(simulator.getResults());
    break;
  default:
    console.error('Unknown command:', argv._[0]);
    console.log('\nExample commands:');
    console.log('  simulate -- `pokery simulate -h AKs -h JJ -b 2d3h4s`');
    break;
}
